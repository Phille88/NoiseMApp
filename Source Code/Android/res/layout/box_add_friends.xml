<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/layout_opponent_box"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
	  android:layout_alignParentRight="true"
	  android:layout_alignParentTop="true">
	  
        
            <ImageView
	          android:id="@+id/img_opponent_profile_picture"
	          android:contentDescription="@string/img_opponent_profile_picture_desc"
	          android:layout_width="100dp"
	          android:layout_height="100dp" />
            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/img_opponent_profile_picture"
                android:background="#80000000"
                android:layout_alignBottom="@+id/img_opponent_profile_picture">
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
				  <TextView 
				  	android:id="@+id/txt_opponent_name"
			      	android:layout_width="wrap_content"
			      	android:layout_height="match_parent"
				    android:textSize="@dimen/size_txt_normal"
				    android:textColor="#FFFFFF"/>
                </TableRow>
                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:layout_weight="1">
					  <Button
					      android:id="@+id/btn_add_friend"
					      android:layout_width="wrap_content"
					      android:layout_height="25dp"
					      android:text="@string/txt_btn_add_friend"
					      android:textSize="@dimen/size_txt_small" />
                </TableRow>
            </TableLayout>
	  
  </RelativeLayout>